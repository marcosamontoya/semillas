  <script>
    // Base de datos de usuarios (simulada)
    const usuarios = {
      "montoya.marcos@inta.gob.ar": { password: "Marcos", page: "C:/Users/Marcos/Desktop/AgroData360/inta-eea-mendoza/index.html" },
      "dalmasso.julieta@inta.gob.ar": { password: "Julinna", page: "C:/Users/Marcos/Desktop/AgroData360/agrodata360/index.html" },
      "semillas@semillas.com": { password: "semillas", page: "user3.html" }
    };

  
  document.getElementById("logInForm").addEventListener("submit", function(e) {
  e.preventDefault();
  const email = document.getElementById("emailLogIn").value;
  const password = document.getElementById("passwordLogIn").value;
  if (usuarios[email] && usuarios[email].password === password) {
    // 游댏 Guardar email del usuario autenticado
    sessionStorage.setItem("usuarioLogueado", email);

    // 游 Redirigir a su p치gina personalizada
    window.location.href = usuarios[email].page;
  } else {
    alert("Email o contrase침a incorrectos.");
  }
});

// Mostrar/ocultar contrase침as
    document.getElementById("toggleSignInPassword").addEventListener("change", function() {
      const passField = document.getElementById("passwordSignIn");
      passField.type = this.checked ? "text" : "password";
    });

    document.getElementById("toggleLogInPassword").addEventListener("change", function() {
      const passField = document.getElementById("passwordLogIn");
      passField.type = this.checked ? "text" : "password";
    });

  
  </script>
